
  <%= form_with(model: task, id: dom_id(task), data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset"}) do |form| %>
    <% if task.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
        <ul>
          <% task.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div data-controller="hello" class=" flex gap-4 items-center">
      <%= form.text_area :body, rows: 1, placeholder: "Eat a pizza without using hands", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 w-full text-black" %>
      <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium cursor-pointer" %>
    </div>
  <% end %>
