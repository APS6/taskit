<div data-turbo="false" class="flex flex-col justify-center h-screen items-center ">
	<h1 class="text-4xl pb-3">Sign Up</h1>

	<%= form_with model: @user, url: user_path do |form| %>
	  <% if @user.errors.any? %>
	      <% @user.errors.full_messages.each do |message|%>
	      	<div class="p-4 text-black bg-red-500 mb-1 rounded">
	        	<%= message %>
	   		 </div>
	      <% end %>
	  <% end %>
	  <div class="flex flex-col gap-3 items-center">
		  <div class="flex flex-col">
		    <%= form.label :email %>
		    <%= form.text_field :email, placeholder: "john@doe.com", class: "rounded text-black" %>
		  </div>
		  <div class="flex flex-col ">
		    <%= form.label :password %>
		    <%= form.password_field :password, class: "rounded text-black" %>
		  </div>
		  <div class="flex flex-col">
		    <%= form.label :password_confirmation %>
		    <%= form.password_field :password_confirmation, class: "rounded text-black" %>
		  </div>
		  <%= form.submit class: "py-3 px-6 bg-white text-black rounded-xl cursor-pointer" %>
		  </div>
	<% end %>
</div>